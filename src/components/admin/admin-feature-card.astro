---
interface Props {
  title: string;
  description: string;
  href: string;
  icon?: string;
}

const { title, description, href, icon } = Astro.props;
---

<a 
  href={href}
  class="block p-6 bg-card border rounded-xl hover:shadow-lg transition-all duration-300 hover:-translate-y-1 group"
>
  <div class="flex flex-col h-full">
    <div class="flex items-center gap-3 mb-4">
      {icon && <span class="text-2xl text-primary">{icon}</span>}
      <h3 class="text-xl font-semibold group-hover:text-primary transition-colors">{title}</h3>
    </div>
    <p class="text-muted-foreground">{description}</p>
  </div>
</a>