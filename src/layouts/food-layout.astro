---
// filepath: src/layouts/FoodLayout.astro
import '@/styles/food.css';

// Default metadata - can be overridden by individual pages
const { title = 'Πρόγραμμα Λέσχης', description = 'Πρόγραμμα φαγητού φοιτητικής λέσχης ΔΗΜΟΚΡΙΤΕΙΟΥ ΠΑΝΕΠΙΣΤΗΜΙΟΥ ΘΡΑΚΗΣ (ΔΠΘ) (DUTH)', lang = 'el' } = Astro.props;
---
<html lang={lang}>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator}>
  </head>
  <body>
    <slot />
  </body>
</html>